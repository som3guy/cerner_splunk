{
  "name": "s_standalone",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "The base role for systems that serve HTTP traffic",
  "run_list": [
    "recipe[cerner_splunk::server]"
  ],
  "default_attributes": {
    "splunk": {
      "apps": {
        "bag": "cerner_splunk/cluster-apps-vagrant:search_head"
      },
      "config": {
        "clusters": [
          "cerner_splunk/cluster-standalone"
        ],
        "secrets": {
          "s_standalone": "cerner_splunk/passwords:splunk.secret"
        },
        "admin_password": {
          "s_standalone": "cerner_splunk/passwords:admin_password"
        }
      },
      "data_bag_secret": "/tmp/test/integration/data_bag_secrets/cerner_splunk_encrypted_data_bag_secret",
      "mgmt_interface": "eth1"
    }
  }
}
